<section class="hero center has-background-white">
    <div class="hero-body center">
        <div class="container">
            <figure class="image center" id="logoimage">
                <%= image_tag  "logo.png" %>
            </figure>
        <div>
    </div>
<section>
<h1>Log in</h1>

<%= form_with scope: :session, url: sessions_path,  local: true do |form| %>
  <p> 
    <%= form.label :name %>
    <%= form.text_field :name %>
  </p>
  <p> 
  <%= form.label :password %>
  <%= form.password_field :password %>
  </p>
  <p>
    <%= form.submit 'Log in' %>
  </p>
  <% flash.each do |type, msg| %>
    <div>
      <%= msg %>
    </div>
  <% end %>
<% end %>
<div class="container">
    <a href="/users/new"> Signup </a>
</div>
